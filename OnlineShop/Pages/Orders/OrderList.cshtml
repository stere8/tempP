@page
@model OnlineShop.Pages.Orders.OrderListModel

@{
    ViewData["Title"] = "Order List";
}

<h2>Order List</h2>

@if (Model.Orders.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User Name</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.User?.FirstName @order.User?.LastName</td> <!-- Show the username instead of UserId -->
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@($"{order.TotalAmount:c}")</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-page="/Orders/OrderDetails" asp-route-orderId="@order.OrderId" class="btn btn-info">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}
